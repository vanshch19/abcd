    <div class="formdiv">
        <form action="/admin/addproduct" class="addProduct" method="POST" enctype="multipart/form-data">
            Upload Image: <input type="file" class="image" name="image"><br>

            <label for="name" class="formLabels">Name:</label>
            <input id="name" type="text" class="name formItems" placeholder="Enter Name" name="name"><br>
            {{!-- <textarea type="text" class="description" name="description" placeholder="enter description"></textarea> --}}

            <label for="feature1" class="formLabels">Feature 1:</label>
            <input id="feature1" type="text" name="feature1" class="feature1 formItems" placeholder="enter feature 1"><br>

            <label for="feature2" class="formLabels">Feature 2:</label>
            <input id="feature2" type="text" name="feature2" class="feature2 formItems" placeholder="enter feature 2"><br>

            <label for="feature3" class="formLabels">Feature 3:</label>
            <input id="feature3"type="text" name="feature3" class="feature3 formItems" placeholder="enter feature 3"><br>

            <label for="warranty" class="formLabels">Warranty:</label>
            <input id="warranty" type="text" name="warranty" class="warranty formItems" placeholder="enter warranty"><br>

            <label for="price" class="formLabels">Price:</label>
            <input id="price" type="text" class="price formItems" placeholder="Enter Price" name="price"><br>

            <label for="discount" class="formLabels">Discount:</label>
            <input id="dicount" type="text" class="discount formItems" placeholder="Enter discount" name="discount"><br>

            <label for="category" class="formLabels">Category:</label>
            <input id="category" type="text" class="category formItems" placeholder="Enter type" name="category"><br>
            <br>

            <button type="submit" class="submitBtn">Add Product</button>
        </form>
